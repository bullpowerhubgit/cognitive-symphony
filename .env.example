# App Configuration
NEXT_PUBLIC_APP_NAME="Digistore24 Pro Automation Suite"
NEXT_PUBLIC_APP_VERSION="3.0.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/digistore24"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars"
JWT_SECRET="another-secret-key-also-32-chars"

# Encryption
ENCRYPTION_KEY="exactly-32-characters-long-key"

# Digistore24 API
DIGISTORE_API_KEY="your_api_key"
DIGISTORE_API_SECRET="your_api_secret"
DIGISTORE_VENDOR_ID="your_vendor_id"
DIGISTORE_IPN_SECRET="your_ipn_secret"

# Email (SendGrid)
SENDGRID_API_KEY="your_sendgrid_api_key"
EMAIL_FROM="noreply@your-domain.com"

# Email (SMTP Alternative)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password"

# Twilio (SMS)
TWILIO_ACCOUNT_SID="your_account_sid"
TWILIO_AUTH_TOKEN="your_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Stripe
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_ANALYTICS="true"
ENABLE_AUTOMATION="true"
